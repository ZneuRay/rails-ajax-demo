<div class="row mt-2">
  <div class="col-lg-12">
    <%= link_to new_remote_book_path, remote: true do  %>
      <button type="button" class="btn btn-outline-primary pull-right" id="new-book-btn" data-toggle="modal" data-target="#formModal" data-title="Create book"><i class="fa fa-plus"></i> New book</button>
    <% end %>
  </div>
</div>

<div id="tableContent" data-url="<%= load_table_remote_books_path %>">
<%= render partial: 'table', locals: {books: @books} %>
</div>

<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-hidden="true" aria-labellerby="formModalTitle">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="formModalTitle"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="modal-success-message alert alert-success" role="alert" style="display:none"></div>
        <div class="modal-danger-message alert alert-danger" role="alert" style="display:none"></div>
        <div class="modal-ajax-content"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>