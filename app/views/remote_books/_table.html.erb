<table class="table mt-3 table-responsive">
  <thead>
    <tr>
      <th>Index</th>
      <th>ISBN</th>
      <th>Title</th>
      <th>Name</th>
      <th>Author</th>
      <th>Release Date</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.each_with_index do |book, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.show_release_date %></td>
        <td>
          <%= link_to edit_remote_book_path(book), remote: true do %>
            <button class="btn btn-outline-warning edit-book-btn" data-toggle="modal" data-target="#formModal" data-title="Edit book"><i class="fa fa-pencil"></i> Edit</button>
          <% end %>
          <%= link_to remote_book_path(book), method: :delete, data: {confirm: 'Are you sure?'}, remote: true do %>
            <button class="btn btn-outline-danger delete-book-btn"><i class="fa fa-trash"></i> Delete</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>