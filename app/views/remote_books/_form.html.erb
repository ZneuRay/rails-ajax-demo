<div class="row mt-3">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <%= simple_form_for @book, remote: true do |f| %>
      <%= f.input :isbn, autofocus: true %>
      <%= f.input :title %>
      <%= f.input :name %>
      <%= f.input :author %>
      <%= f.input :release_date %>
      <%= f.submit (action_name == 'new') ? '建立': '更新', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>