<div class="row mt-2">
  
</div>

<div class="row mt-2" id="book-table">
  <div class="col-lg-12">
    <button @click="onCreateClick" type="button" class="btn btn-outline-primary pull-right" id="new-book-btn" data-toggle="modal" data-target="#formModal" data-url="<%= new_jquery_book_path %>" data-title="Create book" data-submit="Create"><i class="fa fa-plus"></i> New book</button>
  </div>
  <table class="table mt-3 table-responsive" data-url="<%= vue_books_path %>">
    <thead>
      <tr>
        <th>Index</th>
        <th>ISBN</th>
        <th>Title</th>
        <th>Name</th>
        <th>Author</th>
        <th>Release Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr v-for="(book, index) in books">
        <td>{{ index + 1 }}</td>
        <td>{{ book.isbn }}</td>
        <td>{{ book.title }}</td>
        <td>{{ book.name }}</td>
        <td>{{ book.author }}</td>
        <td>{{ book.release_date }}</td>
        <td>
          <button @click="onEditClick" class="btn btn-outline-warning edit-book-btn" data-toggle="modal" data-target="#formModal" data-title="Edit book" data-submit="Update" data-url=''>
            <i class="fa fa-pencil"></i> Edit
          </button>
          <button class="btn btn-outline-danger delete-book-btn" data-url=''>
            <i class="fa fa-trash"></i> Delete
          </button>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-hidden="true" aria-labellerby="formModalTitle">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="formModalTitle">{{ modalTitle }}</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="modal-success-message alert alert-success" role="alert" style="display:none"></div>
        <div class="modal-danger-message alert alert-danger" role="alert" style="display:none"></div>
        <div class="modal-ajax-content"></div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-success" id="submitFormBtn">{{ modalSubmitText }}</button>
      </div>
    </div>
  </div>
</div>