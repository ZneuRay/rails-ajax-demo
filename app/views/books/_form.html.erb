<div class="row mt-3">
  <div class="col-lg-12">
    <%= link_to url_for(:back) do %>
      <button class="btn btn-outline-danger"><i class="fa fa-arrow-left"></i> Back</button>
    <% end %>
  </div>
</div>
<div class="row mt-3">
  <div class="col-lg-6 col-md-8 col-sm-12">
    <%= simple_form_for book do |f| %>
      <%= f.input :isbn %>
      <%= f.input :title %>
      <%= f.input :name %>
      <%= f.input :author %>
      <%= f.input :release_date %>
      <%= f.button :submit, class: "btn btn-outline-success" %>
    <% end %>
  </div>
</div>